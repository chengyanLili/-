<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.village_back.dao.PopulationDao">
    <insert id="insert">
        INSERT INTO `population`(name,phone,gender,age,idCard,householder,post,policy,education,inGroup,nation)
        values(#{name},#{gender},#{phone},#{age},#{idCard},#{householder},#{post},#{policy},#{education},#{inGroup},#{nation})
    </insert>

    <update id="update">
        update `user` set name = #{name}, gender = #{gender} where id = #{id}
    </update>

    <select id="findAll" resultType="com.example.village_back.entity.Population">
        SELECT * FROM population
    </select>
    <select id="findPage" resultType="com.example.village_back.entity.Population">
        SELECT * FROM population
<!--&#45;&#45;             加这个<where></where>这个条件-->
            <where>
                <if test="name != null and name != ''">
                   and name like concat('%',#{name},'%')
                </if>
                <if test="phone != null and phone != ''">
                   and phone like concat('%',#{phone},'%')
                </if>
                <if test="idCard != null and idCard != ''">
                   and idCard like concat('%',#{idCard},'%')
                </if>
            </where>
            LIMIT #{pageNum},#{pageSize}
    </select>

    <select id="count" resultType="java.lang.Long">
        SELECT count(id) from population
        <where>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="phone != null and phone != ''">
                and phone like concat('%',#{phone},'%')
            </if>
            <if test="idCard != null and idCard != ''">
                and idCard like concat('%',#{idCard},'%')
            </if>
        </where>
    </select>


</mapper>