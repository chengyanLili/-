<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.village_back.dao.UserDao">
    <insert id="insert">
        insert into `user`(username,password) values(#{username},#{password})
    </insert>
    <update id="update">
        update `user` set username = #{username}, password = #{password} where id = #{id}
    </update>
    <delete id="delete">
        delete from `user` where id=#{id}
    </delete>

    <select id="findAll" resultType="com.example.village_back.entity.User">
        SELECT * FROM user
    </select>
<!--    用户登录接口 -->
    <select id="findByUser" resultType="com.example.village_back.entity.User">
        select * from user where username = #{username} and password = #{password} and identify = #{identify}
    </select>

</mapper>