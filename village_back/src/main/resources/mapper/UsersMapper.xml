<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.village_back.mapper.UsersMapper">

     <update id="update">
    update `users`
    <set>
        <if test="username != null">
            username = #{username},
        </if>
        <if test="password != null">
            password = #{password},
        </if>
        <if test="phone != null">
            phone = #{phone},
        </if>
        <if test="birthday != null">
            birthday = #{birthday},
        </if>
        <if test="identify != null">
            identify = #{identify},
        </if>
        <if test="avatarUrl != null">
            avatarUrl = #{avatarUrl},
        </if>
        <if test="address != null">
            address = #{address},
        </if>
        <if test="nickName != null">
            nickName = #{nickName},
        </if>
        <if test="gender != null">
            gender = #{gender},
        </if>
    </set>
    <where>
        id = #{id}
    </where>

</update>
    <select  id = "deleteBatch" resultType="java.lang.Integer">
        delete  from  users where id in
        <foreach collection="ids"  item="item" index ="index" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="selectPage" resultType="com.example.village_back.entity.Users">
        SELECT * FROM users
        <!--           加这个<where></where>这个条件-->
        <where>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
        </where>
        LIMIT #{pageNum},#{pageSize}
    </select>

    <select id="selectTotal" resultType="java.lang.Long">
        SELECT count(id) from users
        <where>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
        </where>
    </select>
    <select id="login" resultType="com.example.village_back.entity.Users">
        select * from users where username = #{username} and password = #{password} and identify = #{identify}
    </select>
</mapper>
