<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.village_back.mapper.DifficultMapper">

    <update id="update">
        update `difficulty`
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="difficultReason != null">
                difficultReason = #{difficultReason},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
            <if test="diseases != null">
                diseases = #{diseases},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="disabledCard != null">
                disabledCard = #{disabledCard},
            </if>

        </set>
        <where>
            id = #{id}
        </where>

    </update>
    <select  id = "deleteBatch" resultType="java.lang.Integer">
        delete  from  difficulty where id in
        <foreach collection="ids"  item="item" index ="index" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="selectPage" resultType="com.example.village_back.entity.Difficulty">
        SELECT * FROM difficulty
        <!--           加这个<where></where>这个条件-->
        <where>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="phone != null and phone != ''">
                and phone like concat('%',#{phone},'%')
            </if>
        </where>
        LIMIT #{pageNum},#{pageSize}
    </select>

    <select id="selectTotal" resultType="java.lang.Long">
        SELECT count(id) from difficulty
        <where>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="phone != null and phone != ''">
                and phone like concat('%',#{phone},'%')
            </if>
        </where>
    </select>
</mapper>
